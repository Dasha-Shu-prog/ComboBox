<Window x:Class="Table1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Table1"
        xmlns:d3="clr-namespace:InteractiveDataDisplay.WPF;assembly=InteractiveDataDisplay.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="980">
    <Window.Resources>
        <Style TargetType ="ComboBox">
            <Setter Property="FontFamily" Value="Arial Unicode MS"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0,-3,0,1"/>
        </Style>
        <Style TargetType ="Button">
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontFamily" Value="Arial Unicode MS"/>
            <Setter  Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Width" Value="60"/>
        </Style>
        <Style TargetType ="DataGrid">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontFamily" Value="Arial Unicode MS"/>
            <Setter Property="Padding" Value="6,0"/>
        </Style>
        <Style TargetType ="TextBox">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontFamily" Value="Arial Unicode MS"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid HorizontalAlignment="Center" 
          VerticalAlignment="Center"
          Height="520" Width="970">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="time_start" Grid.Column="0" Grid.Row="0" TextChanged="Time_start_TextChanged"/>
        <TextBox x:Name="time_stop" Grid.Column="0" Grid.Row="1" TextChanged="Time_stop_TextChanged"/>
        <TextBox x:Name="ampl" Grid.Column="0" Grid.Row="2" TextChanged="Ampl_TextChanged"/>
        <ComboBox x:Name ="color_box" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center">
            <ComboBoxItem IsSelected ="True" Content="Красный" Foreground="Firebrick"/>
            <ComboBoxItem Content="Синий" Foreground="DarkBlue"/>
            <ComboBoxItem Content="Зелёный" Foreground="DarkGreen"/>
            <ComboBoxItem Content="Оранжевый" Foreground="DarkOrange"/>
            <ComboBoxItem Content="Фиолетовый" Foreground="DarkMagenta"/>
            <!--ComboBoxItem Content="Другой цвет" Foreground="#FF34345F"/>-->
        </ComboBox>

        <Button x:Name="plus" Grid.Column="0" Grid.Row="4"
                HorizontalAlignment="Left" Click="Plus_Click">
            <Button.Template>
                <ControlTemplate>
                    <Grid x:Name="button_plus">
                        <Ellipse x:Name="buttonSurface" Fill="LightBlue"/>
                        <Label HorizontalAlignment="Center" Content="+"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="minus" Grid.Column="0" Grid.Row="4"
                HorizontalAlignment="Right" Click="Minus_Click">
            <Button.Template>
                <ControlTemplate>
                    <Grid x:Name="button_minus">
                        <Ellipse x:Name="buttonSurface" Fill="LightBlue"/>
                        <Label HorizontalAlignment="Center" Content="-" Padding="5,0"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <DataGrid x:Name="table" AutoGenerateColumns="True" LoadingRow="Table_LoadingRow" 
                  Grid.Column="1" Height="420" Grid.RowSpan="5" IsReadOnly="True" EnableRowVirtualization="False">
           
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="NUMB" Header="№" Binding="{Binding Path=Number}"/>
                <DataGridTextColumn x:Name="TIME_start" Header="Время с" Binding="{Binding Path=Time_start}"/>
                <DataGridTextColumn x:Name="TIME_stop" Header="Время по" Binding="{Binding Path=Time_stop}" />
                <DataGridTextColumn x:Name="amplitude" Header="Амплитуда" Binding="{Binding Path=Amplitude}" />
                <DataGridTextColumn x:Name="color" Header="Цвет" Binding="{Binding Path=Color}"/>
            </DataGrid.Columns>
        </DataGrid>
        <d3:Chart Grid.Column="2" Name="plotter"  
                  BottomTitle="Amplitude" LeftTitle="Time" Grid.RowSpan="5">
            <d3:LineGraph x:Name="linegraph" Description="Simple linegraph"
                          Stroke="Blue" StrokeThickness="3" Grid.RowSpan="5"
                           VerticalAlignment="Center" HorizontalAlignment="Left"/>
        </d3:Chart>
    </Grid>
</Window>
